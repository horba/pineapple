<button id="values">get tweets</button>
    <div style="min-width: 200px; min-height: 200px; border:1px solid green" id="output"></div>
<script src="js/jquery-3.2.1.min.js"></script>
<script>
    $(function() {
        $("#values").click(function(e) {
            e.preventDefault();
            $.get("/api/tweets").done(function (data) {
                let values = data;
                let $output = $("#output");
                $output.html("");
                values.forEach(function(v) {
                    $output.append("<div style=\"border:1px solid blue;margin:10px\">" + v + "</div>");
                });
                
                
            });
        });
    });
</script>
