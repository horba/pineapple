<!doctype html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="css/styles.css">
    <link rel="stylesheet" type="text/css" href="~/css/ModalFormStyles.css">
</head>
<body>
    <header>
        <div class="flex-container">
            <div class="header-logo">
                LOGO
            </div>
            <div class="header-btns">
                <input class="login" id="login" type="button" value="Login" />
            </div>
        </div>
    </header>
    <div class="main">
        <div class="left-column">left column</div>
        <div class="center-column">
            <button class="values" id="values">Get tweets</button>
            <div class="output" id="output"></div>
        </div>
        <div class="right-column">right column</div>
    </div>
    <div id="modal_form">
        <div class="form-control">
            <input type="text" name="login" id="username" tabindex="1" placeholder="Login">
        </div>
        <div class="form-control">
            <input type="text" name="password" id="password" tabindex="2" placeholder="Password">
        </div>
        <div class="form-control">
            <input class="login" id="login1" type="button" value="Login" />
        </div>
        <span id="modal_close">X</span> <!-- Кнoпкa зaкрыть -->
        <!-- Тут любoе сoдержимoе -->
    </div>
    <div id="overlay"></div>
    <footer>footer</footer>
<script src="js/jquery-3.2.1.min.js"></script>
<script>
    $(function() {
        $("#values").click(function(e) {
            e.preventDefault();
            $.get("/api/tweets").done(function (data) {
                let values = data;
                let $output = $("#output");
                $output.html("");
                values.forEach(function(v) {
                    $output.append("<div class=\"post\">" + v + "</div>");
                });
            });
        });
    });
    //Скрипт модальной формы логина.
    $(document).ready(function () {
        $('#login').click(function (event) { // лoвим клик пo ссылки с id="login"
            event.preventDefault(); 
            $('#overlay').fadeIn(400, 
                function () { 
                    $('#modal_form')
                        .css('display', 'block') 
                        .animate({ opacity: 1, top: '50%' }, 200); 
                });
        });
        /* Зaкрытие мoдaльнoгo oкнa, тут делaем тo же сaмoе нo в oбрaтнoм пoрядке */
        $('#modal_close, #overlay').click(function () { 
            $('#modal_form')
                .animate({ opacity: 0, top: '45%' }, 200,  
                function () { 
                    $(this).css('display', 'none'); 
                    $('#overlay').fadeOut(400); 
                }
                );
        });
    });
</script>
</body>
</html>